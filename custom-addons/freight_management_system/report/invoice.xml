<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="oo_freight_order_report_invoice_document" inherit_id="account.report_invoice_document">
        <xpath expr="//div[@id='informations']" position="inside">

            <div class="col-auto col-3 mw-100 mb-2" t-if="o.ship_to_id" name="ship_to_id">
                <strong>Ship To:</strong>
                <p class="m-0" t-field="o.ship_to_id"/>
            </div>

            <div class="col-auto col-3 mw-100 mb-2" t-if="o.consignee_id" name="consignee_id">
                <strong>Shipper Name:</strong>
                <p class="m-0" t-field="o.consignee_id"/>
            </div>

            <div class="col-auto col-3 mw-100 mb-2" t-if="o.transport_type" name="transport_type">
                <strong>Transport:</strong>
                <p class="m-0" t-field="o.transport_type"/>
            </div>

            <div class="col-auto col-3 mw-100 mb-2" t-if="o.awb_number" name="awb_number">
                <strong>AWB Number:</strong>
                <p class="m-0" t-field="o.awb_number"/>
            </div>

            <div class="col-auto col-3 mw-100 mb-2" t-if="o.ship_date" name="ship_date">
                <strong>Shipping Date:</strong>
                <p class="m-0" t-field="o.ship_date"/>
            </div>

        </xpath>
    </template>

</odoo>
